{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended", // Use ESLint's recommended rules
    "plugin:prettier/recommended" // Integrates Prettier with ESLint
  ],
  "parserOptions": {
    "ecmaVersion": 12, // Allow modern ECMAScript features
    "sourceType": "module" // Enable ES6 imports/exports
  },
  "plugins": [
    "prettier" // Enables the Prettier plugin for ESLint
  ],
  "rules": {
    "prettier/prettier": "error", // Treat Prettier formatting issues as errors
    "no-console": "warn", // Warn on console logs (optional, but common)
    "no-unused-vars": "warn", // Warn on unused variables (adjust as needed)
    "semi": ["error", "always"], // Enforce semicolons at the end of statements (you can change this if you prefer no semicolons)
    "quotes": ["error", "single"], // Enforce single quotes for strings (adjust based on preference)
    "eqeqeq": ["error", "always"], // Enforce strict equality (===)
    "no-var": "error" // Disallow `var`, prefer `let` or `const`
  }
}
